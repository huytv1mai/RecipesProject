
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Subscription Settings</h4>
                    <!-- Form to update subscription settings -->
                    <form id="subscriptionForm" method="post" action="/Admin/Subscription/UpdateSettings">
                        <!-- Input fields for monthly and yearly prices -->
                        <div class="form-group">
                            <label for="monthlyPrice">Monthly Price:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input type="text" class="form-control" id="monthlyPrice" name="monthlyPrice" value="10" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="yearlyPrice">Yearly Price:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input type="text" class="form-control" id="yearlyPrice" name="yearlyPrice" value="100" readonly>
                            </div>
                        </div>
                        <!-- Button to enable editing of prices -->
                        <button type="button" id="editButton" class="btn btn-primary">Edit Prices</button>
                        <!-- Button to submit form -->
                        <button type="submit" id="submitButton" class="btn btn-primary d-none">Update Prices</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

