@model JamesThewWebMVC.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutILogin.cshtml";
}

<section>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form asp-controller="Login" asp-action="Register" method="post">
                <h1>Create Account</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your email for registration</span>
                <input type="text" asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="alert-danger"></span>
                <input type="password" asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="alert-danger"></span>
                <input type="text" asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="alert-danger"></span>
                <button>Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form asp-controller="Login" asp-action="Index" method="post">
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your account</span>
                <input type="text" asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="alert-danger"></span> <!-- Display validation error if any -->
                <input type="password" asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="alert-danger"></span> <!-- Display validation error if any -->
                <a href="#">Forgot your password?</a>
                <button type="submit">Sign In</button>
                <span asp-validation-summary="All"></span> <!-- Display summary of all validation errors if any -->
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</section>
